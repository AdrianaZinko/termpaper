  <nav class="my-2 my-md-0 mr-md-3">
    <span class="p-2 text-dark"><%= link_to "Главная страница", home_path %></span>
    <span class="p-2 text-dark"><%= link_to "Add post", new_institution_path %></span>
    <span class="p-2 text-dark"><%= link_to "About us", about_path %></span>
  </nav>
  
</div>

    <div class="container">
    <%= yield %>
